<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RecipeDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainCard"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="20dp"
            android:layout_marginVertical="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recipeImage"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/desc"/>

                <TextView
                    android:id="@+id/recipeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipeImage"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/lato_bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="44dp"
                    android:layout_height="38dp"
                    android:layout_alignBottom="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginBottom="-40dp"
                    android:contentDescription="@string/desc"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:id="@+id/timeNeeded"
                    android:layout_width="333dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginBottom="-34dp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/calImage"
                    android:layout_width="26dp"
                    android:layout_height="33dp"
                    android:layout_below="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="79dp"
                    android:contentDescription="@string/desc"
                    app:srcCompat="@drawable/kcal" />

                <ImageView
                    android:id="@+id/isVegan"
                    android:contentDescription="@string/desc"
                    android:layout_width="105dp"
                    android:layout_height="79dp"
                    android:layout_below="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="272dp"
                    android:layout_marginTop="33dp"/>

                <TextView
                    android:id="@+id/servings"
                    android:fontFamily="@font/lato"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="57dp"
                    android:layout_marginBottom="-70dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/servingsImage"
                    android:contentDescription="@string/desc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/recipeTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="-72dp"
                    app:srcCompat="@drawable/dish" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nutritionalInformationTitle"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            app:cardBackgroundColor="@color/verde_foodborne"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainCard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nutritionImage"
                    android:contentDescription="@string/desc"
                    android:layout_width="45dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/nutrition"/>

                <TextView
                    android:id="@+id/nutritionTitle"
                    android:layout_width="371dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="-44dp"
                    android:fontFamily="@font/lato_black"
                    android:text="@string/macronutrients"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/nutritionalInformation"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="18dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/fatImage"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/desc"
                        app:srcCompat="@drawable/fat"/>

                    <TextView
                        android:id="@+id/fat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/fat"
                        android:textSize="20sp"
                        android:text="holaaaa"
                        android:fontFamily="@font/lato"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/carbsImage"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/desc"
                    app:srcCompat="@drawable/carbs"/>
                <TextView
                    android:id="@+id/carbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginVertical="5dp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/carbs"
                    android:textSize="20sp"
                    android:text="holaaaa"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/proteinImage"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/desc"
                    app:srcCompat="@drawable/protein"/>


                <TextView
                    android:id="@+id/protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/protein"
                    android:fontFamily="@font/lato"
                    android:textSize="20sp"
                    android:text="holaaaa"
                    android:textStyle="bold">
                </TextView>

            </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ingredientsCard"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            app:cardBackgroundColor="@color/verde_foodborne"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainCard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <ImageView
                    android:contentDescription="@string/desc"
                    android:id="@+id/ingredientsImage"
                    android:layout_width="45dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ingredients" />

                <TextView
                    android:id="@+id/ingredientsTitle"
                    android:layout_width="371dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="106dp"
                    android:layout_marginTop="-44dp"
                    android:fontFamily="@font/lato_black"
                    android:text="@string/ingredients"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ingredients"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="18dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ingredientsInformation"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/lato"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp">
                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/instructions"
            android:layout_width="375dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="0dp"
            app:cardBackgroundColor="@color/verde_foodborne"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainCard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <ImageView
                    android:contentDescription="@string/desc"
                    android:id="@+id/instructionsImage"
                    android:layout_width="45dp"
                    android:layout_marginTop="-1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/instructions" />

                <TextView
                    android:id="@+id/instructionsTitle"
                    android:layout_width="371dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="-44dp"
                    android:fontFamily="@font/lato_black"
                    android:text="@string/instructions"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/instructionsDetails"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="18dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instructions">

            <TextView
                android:id="@+id/instructionsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"
                android:textSize="20sp">
            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>